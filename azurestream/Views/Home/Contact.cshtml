@{
    ViewData["Title"] = "Contact";
    Layout = "_AppLayoutFlex";
}

<!-- Start Contact -->
<section class="about section-full relative" id="about">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-10">
                <div class="section-title text-center pb-50">
                    <h3>@ViewData["Title"]</h3>
                    <img src="~/images/icon/title-bottom-4.png" alt="" />
                    <h3>@ViewData["Message"]</h3>

                    <address>
                        One Azurestream Way<br />
                        New York, NY 10105<br />
                        <abbr title="Phone">P:</abbr>
                        212.555.0100
                    </address>

                    <address>
                        <strong>Support:</strong> <a href="mailto:Support@example.com">Support@azurestream.io</a><br />
                    </address>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact -->