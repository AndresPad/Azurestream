                        <li><a asp-area="" asp-controller="Home" asp-action="">Solutions</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="">Resources</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="">Developers</a></li>
